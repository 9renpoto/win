{
  "name": "Deno Dev (win)",
  "image": "mcr.microsoft.com/devcontainers/base:jammy",
  "features": {
    "ghcr.io/devcontainers/features/deno:1": {
      "version": "1.45.x"
    }
  },
  "postCreateCommand": "deno cache dev.ts",
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Fresh Dev Server",
      "onAutoForward": "openBrowser"
    }
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": ["denoland.vscode-deno"],
      "settings": {
        "deno.enable": true,
        "deno.unstable": true
      }
    }
  }
}
