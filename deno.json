{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "nodeModulesDir": "auto",
  "tasks": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "lint": "deno lint",
    "preview": "deno task build && deno serve -A --unstable-kv server.ts",
    "test": "deno test -A --unstable-kv"
  },
  "fmt": { "exclude": ["static/", "posts/"] },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": ["vite/client"]
  },
  "imports": {
    "$fresh_seo": "https://deno.land/x/fresh_seo@1.0.1/mod.ts",
    "./": "./",
    "@/": "./",
    "@deno/gfm": "jsr:@deno/gfm@^0.8.2",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.5",
    "@preact/signals": "npm:@preact/signals@^2.3.2",
    "@std/assert": "jsr:@std/assert@^1.0.12",
    "@std/front-matter": "jsr:@std/front-matter@^0.224.3",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/testing": "jsr:@std/testing@^0.225.3",
    "autoprefixer": "npm:autoprefixer@^10.4.19",
    "fresh": "jsr:@fresh/core@^2.1.2",
    "marked": "https://cdn.jsdelivr.net/npm/marked@4/lib/marked.esm.js",
    "@types/marked": "npm:@types/marked@^4.0.8",
    "preact": "npm:preact@^10.27.2",
    "tailwindcss": "npm:tailwindcss@^3.4.6",
    "vite": "npm:vite@^7.1.3"
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"],
      "exclude": ["react-no-danger"]
    }
  },
  "exclude": ["**/_fresh/*", "cache", "coverage"]
}
